<UserControl x:Class="Translumo.MVVM.Views.ProcessingSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:common="clr-namespace:Translumo.MVVM.Common"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <common:BoldFontConverter x:Key="boldFontConverter"/>
        <common:SliderPercentValueConverter x:Key="sliderPercentValueConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Left" Margin="10">
            
            <!-- Text Processing Settings -->
            <Label Content="{DynamicResource Str.ProcessingSettings.TextProcessing}" 
                   Style="{StaticResource SectionHeaderLabel}" 
                   Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Style="{DynamicResource MaterialDesignActionCheckBox}" 
                          Content="{materialDesign:PackIcon Check}" 
                          IsChecked="{Binding KeepFormatting}"/>
                <Label Content="{DynamicResource Str.ProcessingSettings.KeepFormatting}" 
                       Style="{StaticResource ControlCaptionLabel}" 
                       FontWeight="{Binding KeepFormatting, Converter={StaticResource boldFontConverter}}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Style="{DynamicResource MaterialDesignActionCheckBox}" 
                          Content="{materialDesign:PackIcon Check}" 
                          IsChecked="{Binding AutoClearTexts}"/>
                <Label Content="{DynamicResource Str.ProcessingSettings.AutoClearTexts}" 
                       Style="{StaticResource ControlCaptionLabel}" 
                       FontWeight="{Binding AutoClearTexts, Converter={StaticResource boldFontConverter}}"/>
            </StackPanel>
            
            <StackPanel Margin="20,0,0,20" IsEnabled="{Binding AutoClearTexts}">
                <Label Content="{DynamicResource Str.ProcessingSettings.AutoClearTextsDelay}" 
                       Style="{StaticResource ControlCaptionLabel}"/>
                <Slider Minimum="500" Maximum="10000" Value="{Binding AutoClearTextsDelayMs}" 
                        TickFrequency="500" IsSnapToTickEnabled="True" Width="300" HorizontalAlignment="Left"/>
                <Label Content="{Binding AutoClearTextsDelayMs, StringFormat='{}{0} ms'}" 
                       Style="{StaticResource SecondaryLabel}"/>
            </StackPanel>

            <!-- Frame Comparison Settings -->
            <Separator Margin="0,10,0,20"/>
            
            <Label Content="{DynamicResource Str.ProcessingSettings.FrameComparison}" 
                   Style="{StaticResource SectionHeaderLabel}" 
                   Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <CheckBox Style="{DynamicResource MaterialDesignActionCheckBox}" 
                          Content="{materialDesign:PackIcon Check}" 
                          IsChecked="{Binding EnableFrameComparison}"/>
                <Label Content="{DynamicResource Str.ProcessingSettings.EnableFrameComparison}" 
                       Style="{StaticResource ControlCaptionLabel}" 
                       FontWeight="{Binding EnableFrameComparison, Converter={StaticResource boldFontConverter}}"/>
            </StackPanel>
            
            <StackPanel>
                <Label>
                    <TextBlock common:Inlines.Text="{DynamicResource Str.ProcessingSettings.FrameComparisonDesc}" 
                               Style="{StaticResource TextBlockBase}"/>
                </Label>
            </StackPanel>

            <!-- Frame Comparison Configuration Panel -->
            <StackPanel Margin="20,10,0,0" IsEnabled="{Binding EnableFrameComparison}">
                
                <!-- Stable Frames Required -->
                <Label Content="{DynamicResource Str.ProcessingSettings.StableFramesRequired}" 
                       Style="{StaticResource ControlCaptionLabel}" Margin="0,0,0,5"/>
                <Slider Minimum="1" Maximum="10" Value="{Binding StableFramesRequired}" 
                        TickFrequency="1" IsSnapToTickEnabled="True" Width="300" HorizontalAlignment="Left"/>
                <Label Content="{Binding StableFramesRequired, StringFormat='{}{0} frames'}" 
                       Style="{StaticResource SecondaryLabel}" Margin="0,-5,0,15"/>
                
                <!-- Similarity Threshold -->
                <Label Content="{DynamicResource Str.ProcessingSettings.SimilarityThreshold}" 
                       Style="{StaticResource ControlCaptionLabel}" Margin="0,0,0,5"/>
                <Slider Minimum="80" Maximum="99" Value="{Binding ImageSimilarityThresholdPercent}" 
                        TickFrequency="1" IsSnapToTickEnabled="True" Width="300" HorizontalAlignment="Left"/>
                <Label Content="{Binding ImageSimilarityThresholdPercent, StringFormat='{}{0:F0}%'}" 
                       Style="{StaticResource SecondaryLabel}" Margin="0,-5,0,15"/>
                
                <!-- Grayscale Comparison -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <CheckBox Style="{DynamicResource MaterialDesignActionCheckBox}" 
                              Content="{materialDesign:PackIcon Check}" 
                              IsChecked="{Binding UseGrayscaleComparison}"/>
                    <Label Content="{DynamicResource Str.ProcessingSettings.UseGrayscaleComparison}" 
                           Style="{StaticResource ControlCaptionLabel}" 
                           FontWeight="{Binding UseGrayscaleComparison, Converter={StaticResource boldFontConverter}}"/>
                </StackPanel>
                
                <StackPanel>
                    <Label>
                        <TextBlock common:Inlines.Text="{DynamicResource Str.ProcessingSettings.GrayscaleComparisonDesc}" 
                                   Style="{StaticResource TextBlockBase}"/>
                    </Label>
                </StackPanel>
                
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>